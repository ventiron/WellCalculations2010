<UserControl x:Class="WellCalculations2010.View.LabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WellCalculations2010.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"  Content="Text" x:Name="label" Height="30"  VerticalAlignment="Bottom" HorizontalAlignment="Stretch" FontSize="14"/>
        <TextBox Grid.Row="1" x:Name="textBox"  Height="24" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="14" Text="{Binding TextBoxText, Source={RelativeSource AncestorType=UserControl}}"/>
    </Grid>
</UserControl>
